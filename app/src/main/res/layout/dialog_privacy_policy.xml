<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/rectangle_corners_white">

    <TextView
        android:id="@+id/tips_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/web_service_and_privacy_policy_updated"
        android:textColor="#FF151515"
        android:textSize="16sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFEAEEF5"/>

    <TextView
        android:id="@+id/agree_tv"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="@string/agree"
        android:textColor="#FF339CFE"
        android:textSize="16sp"/>

</LinearLayout>